---
type Props = {
	url: string;
	title: string;
};

const { url, title } = Astro.props;
---

<iframe
	src={url}
	title={title}
	allow='accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture'
	allowfullscreen></iframe>

<style>
	iframe {
		@apply aspect-video w-full;
	}
</style>
