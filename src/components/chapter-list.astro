---
import type { ContentNavItem, ContentType } from '@/types/content';
import { cn } from '@/utils/classnames';

type Props = {
	chapters: ContentNavItem[];
	currentChapterSlug: string;
	contentType: ContentType;
};

const { chapters, currentChapterSlug, contentType } = Astro.props;
---

<nav class='space-y-4'>
	<h2 class='font-bold'>Chapters</h2>
	<ul class='space-y-2'>
		{
			chapters.map((chapter) => (
				<li>
					<a
						class={cn(
							'text-muted-foreground underline-offset-2 hover:underline',
							currentChapterSlug === chapter.slug ? 'text-foreground' : '',
						)}
						href={`/${contentType}/${chapter.slug}`}
					>
						{chapter.title}
					</a>
				</li>
			))
		}
	</ul>
</nav>
