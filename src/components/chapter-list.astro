---
import type { CourseNavItem } from '@/types/course';
import { cn } from '@/utils/classnames';

type Props = {
	chapters: CourseNavItem[];
	currentChapterSlug: string;
};

const { chapters, currentChapterSlug } = Astro.props;
---

<nav class='space-y-4'>
	<h2 class='font-bold'>Chapters</h2>
	<ul class='space-y-2'>
		{
			chapters.map((chapter) => (
				<li>
					<a
						class={cn(
							'text-muted-foreground underline-offset-2 hover:underline',
							currentChapterSlug === chapter.slug ? 'text-foreground' : '',
						)}
						href={`/courses/${chapter.slug}`}
					>
						{chapter.title}
					</a>
				</li>
			))
		}
	</ul>
</nav>
