---
import { SITE_METADATA } from '@/constants/site-config';

type Props = {
	title?: string;
	description?: string;
};

const { title, description = '' } = Astro.props;
---

<title>
	{title ? `${title} | ${SITE_METADATA.title}` : SITE_METADATA.title}
</title>

<meta name='description' content={description} />
