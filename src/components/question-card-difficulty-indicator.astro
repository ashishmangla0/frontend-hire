---
import type { Difficulty } from '@/types/content';
import { cva } from 'class-variance-authority';

type Props = {
	difficulty: Difficulty;
};

const { difficulty } = Astro.props;

const difficultyVariants = cva('absolute left-0 top-0 h-full w-2', {
	variants: {
		difficulty: {
			easy: 'bg-green-500',
			medium: 'bg-yellow-500',
			hard: 'bg-red-500',
		},
	},
});
---

<div class={difficultyVariants({ difficulty })}>
	<span class='sr-only'> Easy </span>
</div>
